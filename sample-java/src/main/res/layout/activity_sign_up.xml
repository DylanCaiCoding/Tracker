<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.SignUpActivity">

  <Button
    android:id="@+id/btn_sign_up_success"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:text="模拟注册成功"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/btn_sign_up_failure"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="模拟注册失败"
    app:layout_constraintEnd_toEndOf="@+id/btn_sign_up_success"
    app:layout_constraintStart_toStartOf="@+id/btn_sign_up_success"
    app:layout_constraintTop_toBottomOf="@+id/btn_sign_up_success" />
</androidx.constraintlayout.widget.ConstraintLayout>